

<h1>Burgers</h1>

<h2>Burgers to be devoured!</h2>

<ul>{{#each burgers}}
  <li>{{ burger_name}}</li>
  {{/each}}
</ul>

    
  
    <h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button id="burger-submit" type="submit">Add Burger</button>
</form>

<h2>Burgers already devoured!</h2>


  {{#each burgers}}

    {{#if devoured }}
    {{/if}}

    
  {{/each}}


     <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Hungry!<br>
    <input type="radio" name="devoured" value="0"> Devoured!
  </div>





